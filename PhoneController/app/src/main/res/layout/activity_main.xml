<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alchemist.myapplication.MainActivity">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="301dp"
        android:layout_height="44dp"

        android:layout_alignEnd="@+id/ConnectButton"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="105dp"
        android:max="200"
        android:onClick="Turn"
        android:progress="100"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignStart="@+id/seekBar3"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginStart="368dp"
        android:layout_marginBottom="3dp"
        android:onClick="Connect"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="247dp"
        android:layout_marginTop="59dp"
        android:text="Stop"
        app:layout_constraintLeft_toRightOf="@+id/ConnectButton"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="51dp" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="22dp"
        android:layout_height="288dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginBottom="5dp"
        android:max="100"
        android:onClick="ChangeSpeed"
        android:rotation="270"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="237dp" />

</RelativeLayout>
